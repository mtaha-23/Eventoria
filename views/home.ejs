<div class="hero">
    <div class="container">
        <div class="hero-content">
            <h1>Find Your Perfect Venue</h1>
            <p>Discover and book the ideal venue for your next event</p>
            <div class="search-box">
                <form action="/venues/search" method="GET">
                    <div class="search-inputs">
                        <input type="text" name="location" placeholder="Location" class="form-control">
                        <select name="type" class="form-control">
                            <option value="">Event Type</option>
                            <option value="wedding">Wedding</option>
                            <option value="corporate">Corporate Event</option>
                            <option value="birthday">Birthday Party</option>
                            <option value="conference">Conference</option>
                        </select>
                        <input type="date" name="date" class="form-control">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<section class="featured-venues">
    <div class="container">
        <h2>Featured Venues</h2>
        <div class="grid grid-4">
            <% for(let i = 0; i < 4; i++) { %>
                <div class="venue-card">
                    <div class="venue-image">
                        <img src="/images/venue-placeholder.jpg" alt="Venue">
                    </div>
                    <div class="venue-info">
                        <h3>Luxury Event Space</h3>
                        <p class="venue-location"><i class="fas fa-map-marker-alt"></i> New York, NY</p>
                        <p class="venue-price">From $1,000/day</p>
                        <div class="venue-rating">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star-half-alt"></i>
                            <span>(4.5)</span>
                        </div>
                        <a href="/venues/1" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</section>

<section class="how-it-works">
    <div class="container">
        <h2>How It Works</h2>
        <div class="grid grid-3">
            <div class="step">
                <div class="step-icon">
                    <i class="fas fa-search"></i>
                </div>
                <h3>Search</h3>
                <p>Browse through our extensive collection of venues and find the perfect match for your event.</p>
            </div>
            <div class="step">
                <div class="step-icon">
                    <i class="fas fa-calendar-check"></i>
                </div>
                <h3>Book</h3>
                <p>Check availability and book your venue instantly with our secure booking system.</p>
            </div>
            <div class="step">
                <div class="step-icon">
                    <i class="fas fa-glass-cheers"></i>
                </div>
                <h3>Celebrate</h3>
                <p>Host your event in your dream venue and create unforgettable memories.</p>
            </div>
        </div>
    </div>
</section>

<section class="cta">
    <div class="container">
        <div class="cta-content">
            <h2>Are You a Venue Owner?</h2>
            <p>List your venue on Eventoria and reach thousands of potential customers.</p>
            <a href="/venue-owner/register" class="btn btn-primary">List Your Venue</a>
        </div>
    </div>
</section> 